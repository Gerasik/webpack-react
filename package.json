{
  "name": "webpack-react",
  "version": "1.0.0",
  "description": "Boilerplate for React apps",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx|css|scss)": [
      "npm run prettier",
      "git add"
    ],
    "*.(js|jsx|ts|tsx)": [
      "npm run lint:fix",
      "git add"
    ],
    "*.(css|scss)": [
      "npm run lint:stylelint",
      "git add"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "build": "webpack --mode production",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint --debug",
    "lint:fix": "eslint",
    "lint:stylelint": "stylelint --syntax scss \"src/**/*.scss\"",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.scss\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gerasik/webpack-react.git"
  },
  "author": "Yauheni Herasimenka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gerasik/webpack-react/issues"
  },
  "homepage": "https://github.com/Gerasik/webpack-react#readme",
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/react": "^16.9.23",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-immutable": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "redux": "^4.0.5",
    "redux-immutable": "^4.0.0",
    "reselect": "^4.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.14.2",
    "ts-loader": "^6.2.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3"
  }
}
